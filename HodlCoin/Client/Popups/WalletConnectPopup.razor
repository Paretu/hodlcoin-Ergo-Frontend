<MudDialog>
    <DialogContent>
        <MudContainer>
            <MudStack Class="mt-4">
                <MudButton Color="Color.Primary" Variant="Variant.Filled" Style="text-align: center; width: 200px;" OnClick="UseNautilus">Nautilus Wallet</MudButton>
                <MudButton Color="Color.Primary" Variant="Variant.Filled" Style="text-align: center; width: 200px;" OnClick="UseSafew">Safew</MudButton>
            </MudStack>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void UseNautilus() => MudDialog.Close(DialogResult.Ok("nautilus"));
    void UseSafew() => MudDialog.Close(DialogResult.Ok("safew"));
}